<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10">

        <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        style="@style/keyboard_button"
        android:layout_weight="1"
        android:onClick="keyboardPress"
        android:text="Q"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/keyboard_button"
            android:layout_weight="1"
            android:onClick="keyboardPress"
            android:text="W"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/keyboard_button"
            android:layout_weight="1"
            android:onClick="keyboardPress"
            android:text="E"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/keyboard_button"
            android:layout_weight="1"
            android:onClick="keyboardPress"
            android:text="R"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/keyboard_button"
            android:layout_weight="1"
            android:onClick="keyboardPress"
            android:text="T"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/keyboard_button"
            android:layout_weight="1"
            android:onClick="keyboardPress"
            android:text="Y"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/keyboard_button"
            android:layout_weight="1"
            android:onClick="keyboardPress"
            android:text="U"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/keyboard_button"
            android:layout_weight="1"
            android:onClick="keyboardPress"
            android:text="I"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/keyboard_button"
            android:layout_weight="1"
            android:onClick="keyboardPress"
            android:text="O"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/keyboard_button"
            android:layout_weight="1"
            android:onClick="keyboardPress"
            android:text="P"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/keyboard_button"
            android:layout_weight="1"
            android:onClick="keyboardPress"
            android:text="A"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/keyboard_button"
            android:layout_weight="1"
            android:onClick="keyboardPress"
            android:text="S"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/keyboard_button"
            android:layout_weight="1"
            android:onClick="keyboardPress"
            android:text="D"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/keyboard_button"
            android:layout_weight="1"
            android:onClick="keyboardPress"
            android:text="F"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/keyboard_button"
            android:layout_weight="1"
            android:onClick="keyboardPress"
            android:text="G"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/keyboard_button"
            android:layout_weight="1"
            android:onClick="keyboardPress"
            android:text="H"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/keyboard_button"
            android:layout_weight="1"
            android:onClick="keyboardPress"
            android:text="J"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/keyboard_button"
            android:layout_weight="1"
            android:onClick="keyboardPress"
            android:text="K"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/keyboard_button"
            android:layout_weight="1"
            android:onClick="keyboardPress"
            android:text="L"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="10">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/keyboard_button"
            android:layout_weight="1"
            android:onClick="keyboardPress"
            android:text="Z"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/keyboard_button"
            android:layout_weight="1"
            android:onClick="keyboardPress"
            android:text="X"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/keyboard_button"
            android:layout_weight="1"
            android:onClick="keyboardPress"
            android:text="C"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/keyboard_button"
            android:layout_weight="1"
            android:onClick="keyboardPress"
            android:text="V"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/keyboard_button"
            android:layout_weight="1"
            android:onClick="keyboardPress"
            android:text="B"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/keyboard_button"
            android:layout_weight="1"
            android:onClick="keyboardPress"
            android:text="N"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/keyboard_button"
            android:layout_weight="1"
            android:onClick="keyboardPress"
            android:text="M"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="10">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/keyboard_button"
            android:layout_weight="5"
            android:id="@+id/space"
            android:onClick="keyboardPress"
            android:text=""/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/keyboard_button"
            android:layout_weight="1"
            android:id="@+id/erase"
            android:onClick="keyboardPress"
            android:text="-"/>
    </LinearLayout>


</LinearLayout>